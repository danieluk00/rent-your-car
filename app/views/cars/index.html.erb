<div class="container">
  <% if params[:query].present? %>
    <h1 class="title">Cars to rent in <%= params[:query].capitalize %></h1>
  <% else %>
    <h1 class="title">Cars to rent in all cities</h1>
  <% end %>
<div class="main-container">

  <div class="cards row">
    <% @cars.each do |car| %>
      <%= render 'shared/card', car: car %>
    <% end %>
  </div>
  
  <div
    id="map"
    style="width: 45%;
    height: 600px;
    position: sticky;
    margin-top: 19px;
    border-radius: 10px;
    top: 11vh;
    box-shadow: 0 0 10px rgba(0, 0, 0, .6);"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
</div>
