  <div class="page-container">
    <div class="name-location">
      <p id="first-line"><%= "#{@car.brand.capitalize} #{@car.model}" %></p>
      <p id="second-line"><%= "4.9 #{"⭐️" * 1 } #{@car.location.capitalize}" %></p>
    </div>
    <div class="car-container">
      <div class="car-photo" >
        <div class="photo-holder" style="background-image: url('<%= @car.photo %>');">
        </div>
        <div id="gap"></div>
        <div id="map" data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>  
    </div>
    <div class="price-book">
      <div class="price-book__details">
        <p id="price"><%= "#{@car.price}€/day" %></p>
        <p id="dates">3 Dec - 10 Dec</p>
        <p id="service-fee">Service fee: 10%</p>
      </div>
      <h3 id="book_car"> <%= link_to "Book this car", new_car_booking_path(@car) %>  </h3>
    </div>
    <div class="specifications">
      <div class="overview-container">
        <p class="first-line"></p>
        <p class="overview active">Overview</p>
        <p class="reviews">Reviews</p>
        <p class="line"></p>
      </div>
      <div class="overview-text">
        <p><%= "Engine type: #{@car.engine_type}" %></p>
        <p><%= "Description: #{@car.description}" %></p>
      </div>
      <div class="reviews-container hidden">
        <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Itaque, illum.</p>
      </div>
    </div>
  </div>



